<import src="./global.wxml" />
<view class="container">
	<template is="header" />
	<view class="lobby">
		<view class="creator">
			<button bindtap="createRoom">创建房间</button>
		</view>
		<view class="entrance">
			<input type="number" placeholder="房间号" auto-focus confirm-type="go" bindinput="handleRoomNumberChange" />
			<button bindtap="enterRoom">进入房间</button>
		</view>
	</view>
	<template is="footer" />
</view>
