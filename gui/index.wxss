
.lobby {
	margin: 0 30px;
	padding: 5px 30px;
}

.lobby .creator,
.lobby .entrance {
	margin: 60px 0;
}

.lobby button,
.lobby input {
	background: rgba(255, 255, 255, 0.85);
	margin: 20px;
	border-radius: 6px;
	text-align: center;
	height: 2.5em;
	line-height: 2.5em;
	box-sizing: content-box;
	font-size: 18px;
	padding: 0;
}

