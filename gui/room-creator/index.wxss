
view.header {
	margin-bottom: 85px;
}

view.team-selector {
	color: white;
	margin: 20px 10px;
}

view.team-selector .header {
	text-align: center;
	display: block;
	margin: 25px 0;
}

view.role-list {
	display: block;
}

view.role-list roleicon {
	display: inline-block;
}


view.tips {
	width: 86%;
	margin: 1em auto;
	font-size: 9pt;
	padding-left: 2em;
}

view.tips > text {
	display: block;
	list-style: circle;
	text-indent: -1.5em;
}

view.tips > text::before {
	content: ' \1F43A ';
}
